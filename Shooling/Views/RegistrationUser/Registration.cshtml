@model UserInfo
@{
    ViewData["Title"] = "Registration";
}
<div class="form-wrapper">
    <form asp-action="Registration" asp-controller="RegistrationUser">
        <div class="register">
            <label asp-for="Lastname"></label>
            <input asp-for="Lastname" />
            <span asp-validation-for="Lastname"></span>
        </div>
        <div class="register">
            <label asp-for="Firstname"></label>
            <input asp-for="Firstname" />
            <span asp-validation-for="Firstname"></span>
        </div>
        <div class="register">
            <label asp-for="Patronymic"></label>
            <input asp-for="Patronymic" />
            <span asp-validation-for="Patronymic"></span>
        </div>
        <div class="register">
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="register">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber"></span>
        </div>
        <div class="register">
            <label asp-for="Login"></label>
            <input asp-for="Login" />
            <span asp-validation-for="Login"></span>
        </div>
        <div class="register">
            <label asp-for="Password"></label>
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="register">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="register tick">
            <label asp-for="IsAgree"></label>
            <input asp-for="IsAgree" />
            <span asp-validation-for="IsAgree"></span>
        </div>
        <button class="reg" type="submit">
            Зарегистрировать
        </button>
    </form>
</div>

